# Stage 1: Build
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /app

# Copy Core project file first (for caching)
COPY NormalToHeightMapConverter.Core/NormalToHeightMapConverter.Core.fsproj ./NormalToHeightMapConverter.Core/

# Copy Web project file (which references Core)
COPY NormalToHeightMapConverter.Web/NormalToHeightMapConverter.Web.fsproj ./NormalToHeightMapConverter.Web/

# Restore dependencies for the Web project (it will pull in Core automatically)
WORKDIR /app/NormalToHeightMapConverter.Web
RUN dotnet restore

# Copy source code for both projects
COPY NormalToHeightMapConverter.Core/ ../NormalToHeightMapConverter.Core/
COPY NormalToHeightMapConverter.Web/ ./

# Publish the Web project (includes Core)
RUN dotnet publish -c Release -o /app/out

# Stage 2: Runtime
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS runtime
WORKDIR /app

COPY --from=build /app/out .

# Set explicit permissions for upload directory
ENV UPLOAD_PATH=/uploads
VOLUME /uploads

EXPOSE 8080
# Run
ENTRYPOINT ["dotnet", "NormalToHeightMapConverter.Web.dll"]
